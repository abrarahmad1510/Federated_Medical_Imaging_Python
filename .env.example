# ============================================
# ENTERPRISE FEDERATED LEARNING PLATFORM
# Environment Configuration
# ============================================
# === APPLICATION SETTINGS ===
APP_NAME="Medical FL Platform"
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=change-this-in-production-to-a-random-secure-key
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000
# === DATABASE CONFIGURATION ===
# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=medical_fl
DB_USER=fl_admin
DB_PASSWORD=secure_password_123
DB_SSL_MODE=prefer
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123
REDIS_DB=0
REDIS_SSL=false
# === FEDERATED LEARNING SETTINGS ===
FLOWER_SERVER_HOST=0.0.0.0
FLOWER_SERVER_PORT=8080
FLOWER_SSL_ENABLED=false
FLOWER_CERT_PATH=/certs/server.crt
FLOWER_KEY_PATH=/certs/server.key
FLOWER_CA_PATH=/certs/ca.crt
# Privacy Settings
DP_EPSILON=1.0
DP_DELTA=1e-5
DP_MAX_GRAD_NORM=1.0
DP_NOISE_MULTIPLIER=1.1
# Training Settings
FL_MIN_CLIENTS=3
FL_MIN_AVAILABLE_CLIENTS=5
FL_ROUNDS=50
FL_EPOCHS_PER_ROUND=2
FL_BATCH_SIZE=8
FL_LEARNING_RATE=0.001
# === MODEL SETTINGS ===
MODEL_TYPE=unet3d
MODEL_IN_CHANNELS=1
MODEL_OUT_CHANNELS=2
MODEL_FEATURES=[32, 64, 128, 256]
MODURE_DROPOUT=0.2
# === STORAGE CONFIGURATION ===
# MLflow Tracking
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_S3_ENDPOINT_URL=http://minio:9000
MLFLOW_EXPERIMENT_NAME=medical_segmentation
# MinIO/S3
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=medical-models
S3_SECURE=false
# === MONITORING ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
# === CLIENT SETTINGS ===
CLIENT_SIMULATION_MODE=true
CLIENT_NUMBER=5
CLIENT_DATA_SPLIT=non-iid
CLIENT_UPLOAD_LIMIT_MB=100
# === SECURITY ===
JWT_SECRET_KEY=super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=900
JWT_REFRESH_TOKEN_EXPIRES=86400
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"\]
# === EMAIL CONFIGURATION ===
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@medicalfl.example.com
# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/application.log
LOG_FORMAT=json
LOG_ROTATION_SIZE=100MB
LOG_BACKUP_COUNT=10
# === KUBERNETES (Production) ===
K8S_NAMESPACE=medical-fl
K8S_STORAGE_CLASS=standard
K8S_INGRESS_CLASS=nginx
K8S_CERT_MANAGER_ISSUER=letsencrypt-prod
# === PERFORMANCE ===
WORKER_PROCESSES=4
WORKER_THREADS=100
REQUEST_TIMEOUT=30
KEEP_ALIVE=5
